# =======================================
# DATABASE
# =======================================
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# =======================================
# NEXTAUTH CONFIGURATION
# =======================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# NextAuth URL (use your production URL in production)
NEXTAUTH_URL=http://localhost:3000

# Enable/disable sign-in (set to "true" to allow users to sign in)
NEXT_PUBLIC_SIGNIN_ENABLED=true

# =======================================
# GOOGLE OAUTH CONFIGURATION
# =======================================
# Get these from: https://console.cloud.google.com/apis/credentials
# 1. Create a new project or select existing
# 2. Go to "Credentials" > "Create Credentials" > "OAuth 2.0 Client ID"
# 3. Application type: Web application
# 4. Authorized redirect URIs: http://localhost:3000/api/auth/callback/google (development)
#                             https://yourdomain.com/api/auth/callback/google (production)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =======================================
# EMAIL CONFIGURATION (for magic links)
# =======================================
# AWS SES Configuration (optional - for email magic links)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Sender email (must be verified in AWS SES)
EMAIL_FROM=noreply@yourdomain.com

# =======================================
# SUPER ADMIN
# =======================================
# Comma-separated list of admin emails
SUPER_ADMIN_EMAILS=admin@yourdomain.com

# =======================================
# PAYMENT PROVIDERS (optional)
# =======================================
# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# DodoPay
DODO_SECRET_KEY=your_dodo_secret_key
DODO_WEBHOOK_SECRET=your_dodo_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# =======================================
# STORAGE (AWS S3)
# =======================================
AWS_S3_BUCKET_NAME=your_bucket_name
AWS_S3_REGION=us-east-1

# =======================================
# INNGEST (background jobs)
# =======================================
INNGEST_EVENT_KEY=your_inngest_event_key
INNGEST_SIGNING_KEY=your_inngest_signing_key

# =======================================
# APPLICATION CONFIGURATION
# =======================================
NODE_ENV=development
